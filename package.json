{
  "private": true,
  "workspaces": [
    "lib/chrome",
    "lib/ui",
    "lib/utils",
    "extension/background",
    "extension/content-script",
    "extension/popup",
    "extension/options"
  ],
  "scripts": {
    "postinstall": "ln -s -f $(pwd)/pre-commit .git/hooks/pre-commit",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format",
    "clean": "yarn workspaces run clean",
    "build:lib": "yarn workspace @localhost/ui build && yarn workspace @localhost/chrome build && yarn workspace @localhost/utils build",
    "test": "yarn build:lib && yarn workspaces run test",
    "coverage": "yarn build:lib && yarn workspaces run coverage",
    "build": "yarn workspaces run build",
    "rebuild": "yarn workspaces run rebuild",
    "dev": "yarn build:lib && node concurrently.cjs"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/chrome": "^0.0.203",
    "@types/node": "^18.11.12",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-c8": "^0.25.6",
    "concurrently": "^7.6.0",
    "del-cli": "^5.0.0",
    "esbuild": "^0.16.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^8.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.6"
  }
}
